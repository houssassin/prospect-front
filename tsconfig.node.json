{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
		"paths": {
			"@/*": ["./src/*"],
			"@pages/*": [
				"./src/pages/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@widgets/*": [
				"./src/widgets/*"
			]
		}
  },
  "include": ["vite.config.ts"]
}
